<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activebadge.ActiveBadgeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAlternateBg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="6sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bID: "
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/badgeIdText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/badgeId"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/badgeIdText"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Name: "
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/customNameText"
                    android:textSize="18sp"
                    android:layout_below="@id/badgeIdText"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/customName"
                    android:textSize="18sp"
                    android:layout_below="@id/badgeId"
                    android:layout_toRightOf="@+id/customNameText"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="router_MAC: "
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/routerMacText"
                    android:textSize="18sp"
                    android:layout_below="@id/customNameText"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/routerMac"
                    android:textSize="18sp"
                    android:layout_below="@id/customName"
                    android:layout_toRightOf="@+id/routerMacText"/>



                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/refreshButton"
                    android:src="@android:drawable/stat_notify_sync" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="nBadges:"
                    android:id="@+id/nBadgesInListText"
                    android:layout_toLeftOf="@+id/nBadgesInList"
                    android:textSize="14sp"
                    android:layout_below="@+id/refreshButton"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/nBadgesInList"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_below="@+id/refreshButton"
                    android:layout_marginLeft="4sp"/>

            </RelativeLayout>

        </ScrollView>

        <ListView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainListView">
        </ListView>

    </LinearLayout>

</RelativeLayout>
